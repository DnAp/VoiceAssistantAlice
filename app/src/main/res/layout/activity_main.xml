<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/weather_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/messages_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fab_fragment"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <ListView
            android:id="@+id/messages_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:divider="@null"
            android:dividerHeight="0dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/welcome_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab_fragment"
        android:visibility="gone">

        <TextView
            android:id="@+id/welcome_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/welcome_text1"
            android:textColor="@color/welcome_text_color"
            android:textSize="24sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/welcome_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_text1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/welcome_text2"
            android:textColor="@color/welcome_text_color"
            android:textSize="24sp"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/welcome_text2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/down_arrow_red" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fab_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/version_info_sample"
        android:textColor="@color/text_red_color"
        android:textSize="16sp" />

</RelativeLayout>
