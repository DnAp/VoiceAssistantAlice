<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView
            android:id="@+id/task_alarm_clock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:gravity="center_horizontal"
            android:text="@string/task_alarm_clock_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:typeface="monospace" android:layout_gravity="center_horizontal"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="15"
                android:id="@+id/editText" android:layout_below="@+id/task_alarm_clock_title"
                android:layout_centerHorizontal="true" android:layout_marginTop="35dp" android:enabled="false"
                android:text="@string/task_alarm_clock_time" android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:id="@+id/current_day_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_name"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
        <include layout="@layout/helper_loader"/>
    </LinearLayout>

</LinearLayout>